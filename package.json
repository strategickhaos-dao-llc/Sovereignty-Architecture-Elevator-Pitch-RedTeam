{
  "name": "gitlens-discord-integration",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/event-gateway.ts",
    "bot": "tsx watch src/bot.ts",
    "start": "node --enable-source-maps dist/event-gateway.js",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "compile": "hardhat compile",
    "test:contracts": "hardhat test",
    "deploy:base-sepolia": "hardhat run scripts/deploy.cjs --network baseSepolia",
    "deploy:base-mainnet": "hardhat run scripts/deploy.cjs --network baseMainnet",
    "generate-root": "hardhat run scripts/generate-merkle-root.cjs"
  },
  "dependencies": {
    "discord.js": "^14.16.3",
    "express": "^4.21.1",
    "body-parser": "^1.20.3",
    "@octokit/webhooks": "^13.3.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.23.8",
    "node-fetch": "^3.3.2",
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.3.10"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "tsx": "^4.19.2",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  }
}