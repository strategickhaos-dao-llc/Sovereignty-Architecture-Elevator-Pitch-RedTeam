# Honeypot System Configuration
# Copy this to .env.honeypot and fill in your values

# Beacon tracking endpoint
# Replace with your actual server URL that will receive leak notifications
BEACON_URL=https://your-tracking-server.com/leaker

# Optional: Basic Authentication
# Uncomment to enable password protection on the landing page
# HTPASSWD_USER=trusted_user
# HTPASSWD_PASS=secure_password

# Your Tailscale/VPN IP for direct access
# TAILSCALE_IP=100.x.x.x

# Secret token for URL-based access control
# Generate with: openssl rand -hex 32
# SECRET_TOKEN=

# Discord/Telegram webhook for alerts (optional)
# ALERT_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Notification settings
ALERT_ON_DOWNLOAD=true
ALERT_ON_SUSPICIOUS_ACCESS=true
ALERT_ON_BEACON=true

# Geo-blocking (comma-separated country codes)
# ALLOWED_COUNTRIES=US,CA,GB

# Rate limiting
MAX_REQUESTS_PER_MINUTE=10
