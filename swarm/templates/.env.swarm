# .env.swarm â€” Sovereign Swarm System v2.0 Environment Template
#
# Copy to .env and fill in values before deployment
# NEVER commit secrets to version control

# ============================================================================
# Node Configuration
# ============================================================================
NODE_ROLE=core                    # core, fixed, mobile, pelican
NODE_ID=command-0                 # Unique node identifier

# ============================================================================
# Network Configuration
# ============================================================================
SWARM_SUBNET=10.44.0.0/16
WG_PORT=51820
NATS_PORT=4222
MATRIX_PORT=8008
SYNCTHING_PORT=22000

# ============================================================================
# Starlink Configuration
# ============================================================================
STARLINK_DISH=3476D3              # Your Starlink dish ID
STARLINK_PRIORITY=local           # local or global

# ============================================================================
# NATS Authentication
# ============================================================================
NATS_PASSWORD=                    # Main swarm user password
PELICAN_PASSWORD=                 # Pelican node password
ALLY_PASSWORD=                    # Ephemeral ally password
CLUSTER_PASSWORD=                 # Inter-node cluster password
LEAF_PASSWORD=                    # Leafnode password
ADMIN_PASSWORD=                   # System account password
SWARM_PASSWORD=                   # Legacy compatibility

# ============================================================================
# SwarmGate Configuration
# ============================================================================
SWARM_SECRET=                     # JWT signing secret (generate with: openssl rand -hex 32)
TOKEN_TTL_HOURS=24               # Default token TTL

# ============================================================================
# Matrix Configuration
# ============================================================================
SYNAPSE_SERVER_NAME=swarm.local
MATRIX_DB_PASSWORD=               # PostgreSQL password
MAUTRIX_ACCESS_TOKEN=             # Matrix bot access token

# ============================================================================
# Grok/Ollama Configuration
# ============================================================================
GROK_MODEL=llama3:8b              # Ollama model to use
OLLAMA_URL=http://localhost:11434
MAX_TOKENS=2048
TEMPERATURE=0.7

# ============================================================================
# Monitoring
# ============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ALERTMANAGER_PORT=9093

# ============================================================================
# Failover Configuration
# ============================================================================
PRIMARY_GW=192.168.1.1           # Primary gateway for failover check
FAILOVER_IFACE=lte0              # LTE interface for failover

# ============================================================================
# Obsidian/Syncthing
# ============================================================================
VAULT_PATH=/opt/sovereign-swarm/vaults
CHAIN_FILE=/opt/sovereign-swarm/provenance/chain.json
