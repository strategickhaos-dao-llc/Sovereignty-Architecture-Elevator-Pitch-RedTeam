# GCP Provider Configuration for Honeypot Infrastructure
# This is a deliberately non-sovereign honeypot - log- and alert-only

terraform {
  required_version = ">= 1.0.0"

  required_providers {
    google = {
      source  = "hashicorp/google"
      version = ">= 4.0.0"
    }
  }
}

provider "google" {
  project = var.project_id
  region  = var.region
}
