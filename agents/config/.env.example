# Agent Collaboration Environment Variables
# Copy this file to .env.local and fill in your values

# VPN Configuration
VPN_IP=10.100.0.1
VPN_INTERFACE=wg0

# Kubernetes Cluster Access
KUBECONFIG=$HOME/.kube/config
KUBERNETES_API_SERVER=https://k8s-cluster.example.com:6443
KUBERNETES_NAMESPACE=ops

# Agent API Configuration
API_PORT=30000
METRICS_PORT=30090
AGENT_TOKEN=<your-service-account-token>

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Monitoring Configuration
PROMETHEUS_URL=http://${VPN_IP}:30090
GRAFANA_URL=http://${VPN_IP}:3000
LOKI_URL=http://${VPN_IP}:3100

# Security
ALLOWED_CIDR=10.100.0.0/24
FIREWALL_ENABLED=true

# Logging
LOG_LEVEL=INFO
