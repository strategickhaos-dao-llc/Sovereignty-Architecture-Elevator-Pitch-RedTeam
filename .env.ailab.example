# AI Lab Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# CORE INFRASTRUCTURE
# ============================================================================

# Database
POSTGRES_PASSWORD=change_me_to_secure_password
POSTGRES_USER=postgres
POSTGRES_DB=strategickhaos

# Redis
REDIS_PASSWORD=change_me_redis_password

# Grafana
GRAFANA_PASSWORD=change_me_admin_password

# Discord Integration
DISCORD_TOKEN=your_discord_bot_token_here
CH_CLUSTER_STATUS_ID=your_channel_id
CH_ALERTS_ID=your_channel_id
CH_DEPLOYMENTS_ID=your_channel_id
CH_PRS_ID=your_channel_id
CH_AGENTS_ID=your_channel_id
CH_INFERENCE_ID=your_channel_id
CH_DEV_FEED_ID=your_channel_id

# Event Gateway
EVENTS_HMAC_KEY=generate_64_character_random_key_here

# ============================================================================
# AI MODELS & SERVICES
# ============================================================================

# OpenAI API (optional, for some services)
OPENAI_API_KEY=sk-your_openai_key_here_or_leave_blank

# Open WebUI
WEBUI_SECRET_KEY=generate_random_secret_key_here

# ============================================================================
# SECURITY & NETWORKING
# ============================================================================

# HashiCorp Vault
VAULT_ROOT_TOKEN=root_token_change_in_production
VAULT_ADDR=http://vault:8200

# Tailscale VPN
TAILSCALE_AUTH_KEY=tskey-your-tailscale-auth-key-here

# OAuth2 Proxy
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
COOKIE_SECRET=generate_32_character_random_string

# WireGuard
WIREGUARD_PEERS=10
WIREGUARD_SERVERURL=auto
WIREGUARD_SERVERPORT=51820

# ============================================================================
# VOICE INTERFACE (VoiceWing)
# ============================================================================

# Whisper ASR
ASR_MODEL=large-v3
ASR_ENGINE=faster_whisper

# TTS Configuration
TTS_MODEL=tts_models/en/vctk/vits
TTS_SERVER_PORT=5002

# Voice Router
ROUTER_PORT=8766

# ============================================================================
# FILESYSTEM AGENTS
# ============================================================================

# Workspace Path
WORKSPACE_PATH=/workspace

# Agent Configuration
AUTO_INDEX=true
AUTO_SUMMARIZE=true
ENABLE_OCR=true
ENABLE_PDF=true
ENABLE_OFFICE=true

# ChromaDB
CHROMADB_PERSISTENT=TRUE
CHROMADB_ANONYMIZED_TELEMETRY=FALSE

# PGVector
AGENT_DB_USER=agent_user
AGENT_DB_PASSWORD=agent_secure_password
AGENT_DB_NAME=agent_vectors

# ============================================================================
# BROWSER AUTOMATION
# ============================================================================

# Selenium Grid
GRID_MAX_SESSION=10
GRID_BROWSER_TIMEOUT=300
GRID_TIMEOUT=300

# Browser Nodes
SE_NODE_MAX_SESSIONS=5
SE_VNC_NO_PASSWORD=1
SE_SCREEN_WIDTH=1920
SE_SCREEN_HEIGHT=1080

# Automation API
DEFAULT_BROWSER=chrome
IMPLICIT_WAIT=10
PAGE_LOAD_TIMEOUT=30

# ============================================================================
# ADVANCED RAG
# ============================================================================

# PrivateGPT
PGPT_PROFILES=local
PGPT_EMBEDDING_MODE=local
PGPT_LLM_MODE=ollama
PGPT_CONTEXT_WINDOW=32768
PGPT_CHUNK_SIZE=512
PGPT_CHUNK_OVERLAP=128

# AnythingLLM
ANYTHINGLLM_LLM_PROVIDER=ollama
ANYTHINGLLM_EMBEDDING_ENGINE=ollama
ANYTHINGLLM_VECTOR_DB=chroma
ANYTHINGLLM_CONTEXT_LENGTH=32768

# Extreme Context RAG
EXTREME_CONTEXT_WINDOW=131072
ROPE_SCALING=true
ENABLE_RERANKING=true

# Adversarial RAG
ENABLE_NEGATIVE_INJECTION=true
ENABLE_PROMPT_INJECTION=true
ENABLE_CONTEXT_POISONING=true

# Weaviate
WEAVIATE_AUTHENTICATION_ANONYMOUS_ACCESS_ENABLED=true
WEAVIATE_PERSISTENCE_DATA_PATH=/var/lib/weaviate

# Milvus
MILVUS_ETCD_ENDPOINTS=milvus-etcd:2379
MILVUS_MINIO_ADDRESS=minio:9000

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Prometheus
PROMETHEUS_RETENTION=30d

# Grafana Plugins
GF_INSTALL_PLUGINS=grafana-piechart-panel

# Logging Level
LOG_LEVEL=INFO

# ============================================================================
# RESOURCE LIMITS (Uncomment to enable)
# ============================================================================

# CPU Limits (in cores)
# OLLAMA_CPU_LIMIT=8
# WHISPER_CPU_LIMIT=4
# SELENIUM_CPU_LIMIT=4

# Memory Limits (in GB)
# OLLAMA_MEM_LIMIT=16g
# WHISPER_MEM_LIMIT=8g
# SELENIUM_MEM_LIMIT=8g

# ============================================================================
# GPU CONFIGURATION
# ============================================================================

# Enable GPU support (0=disabled, 1=enabled)
ENABLE_GPU=1

# GPU Device IDs (comma-separated)
GPU_DEVICES=0

# GPU Memory Fraction
GPU_MEMORY_FRACTION=0.8

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# Network Subnets (change if conflicts with existing networks)
STRATEGICKHAOS_SUBNET=172.18.0.0/16
VOICEWING_SUBNET=172.20.0.0/16
AGENTS_SUBNET=172.21.0.0/16
AUTOMATION_SUBNET=172.22.0.0/16
RAG_SUBNET=172.23.0.0/16
SECURITY_SUBNET=172.24.0.0/16
DMZ_SUBNET=172.25.0.0/16

# ============================================================================
# TIMEZONE
# ============================================================================

TZ=UTC

# ============================================================================
# NOTES
# ============================================================================

# 1. Generate random keys with: openssl rand -hex 32
# 2. For production, change all passwords and secrets
# 3. Use proper secrets management (Vault) for sensitive data
# 4. Review security settings before exposing to internet
# 5. Enable SSL/TLS certificates for production deployments
