# PID-RANCO Trading Bot Environment Configuration
# Copy this file to .env and configure your values

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
ENABLE_DISCORD_NOTIFICATIONS=false

# Email Notifications
NOTIFICATION_EMAIL=your@email.com
NOTIFICATION_EMAIL_FROM=pid-ranco@yourdomain.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASS=your-app-password
ENABLE_EMAIL_NOTIFICATIONS=false

# SMS Notifications (Twilio)
NOTIFICATION_PHONE=+1234567890
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890
ENABLE_SMS_NOTIFICATIONS=false

# Trading Configuration
NINJATRADER_PATH=C:\Users\YourUser\Documents\NinjaTrader 8
MARKET_MODE=sim
LOVE_MODE_ENABLED=false
ENTANGLEMENT_ENABLED=false

# Ollama LLM Integration (Optional)
OLLAMA_BASE_URL=http://localhost:11434
INFERENCE_MODEL=llama3.2:70b
SENTIMENT_MODEL=gemma2:27b
MUTATION_MODEL=dolphin-llama3.2

# Storage Paths
THRONE_NAS_PATH=/throne-nas-32tb
LOG_PATH=/var/log/pid-ranco
BACKUP_PATH=./backups

# Security
API_KEY_ENCRYPTION=true
SECURE_STORAGE_PATH=/throne-nas-32tb/.secrets
AUDIT_TRAIL=true

# Performance Targets
TARGET_WIN_RATE=0.51
TARGET_PROFIT_FACTOR=1.618
MAX_CONSECUTIVE_LOSSES=99

# Love Compilation Settings
LOVE_COMPILE_ENABLED=true
LOVE_SOURCE=her_voice.wav
LOVE_RECOMPILE_INTERVAL=3600

# Debug & Logging
DEBUG_MODE=false
LOG_LEVEL=INFO
CONSOLE_OUTPUT=true
