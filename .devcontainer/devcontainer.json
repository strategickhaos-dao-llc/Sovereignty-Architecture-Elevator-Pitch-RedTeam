{
  "name": "Council War Room - Legion Command Center",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "eamodio.gitlens",
        "redhat.vscode-yaml",
        "hashicorp.terraform",
        "ms-python.python",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.autoSave": "afterDelay",
        "editor.formatOnSave": true,
        "git.autofetch": true,
        "gitlens.currentLine.enabled": true,
        "gitlens.hovers.currentLine.over": "line",
        "gitlens.codeLens.enabled": true,
        "workbench.colorTheme": "Default Dark+"
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "remoteEnv": {
    "LEGION_MODE": "war-room",
    "COUNCIL_ENABLED": "true",
    "THREAT_VAULT_PATH": "/workspaces/council-vault"
  },

  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/codespace/.ssh,readonly,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.kube,target=/home/codespace/.kube,readonly,type=bind,consistency=cached"
  ],

  "forwardPorts": [
    3000,
    8080,
    9090,
    6379
  ],

  "portsAttributes": {
    "3000": {
      "label": "Discord Bot",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Event Gateway",
      "onAutoForward": "notify"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    }
  },

  "updateContentCommand": "git pull origin master && npm install",

  "postStartCommand": "echo 'ðŸ§  Council War Room Active. All systems nominal.' && bash scripts/lockdown.sh",

  "waitFor": "postCreateCommand",

  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  }
}
